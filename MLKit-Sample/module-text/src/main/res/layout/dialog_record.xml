<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginHorizontal="35dp"
    android:background="@drawable/record_dailog_background"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/please_speak"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/secondary_text_color"
            android:layout_marginBottom="15dp" />
        <ImageView
            android:id="@+id/id_recorder_dialog_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/microphone"
            android:background="@null"
            android:layout_gravity="center_horizontal" />

        <ImageView
            android:id="@+id/id_recorder_dialog_voice"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/volume_1"
            android:layout_gravity="center" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_stop_record"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="@string/stop_record"
        android:textSize="@dimen/text_size_12sp"
        android:background="@drawable/btn_back"
        android:textAllCaps="false"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_marginBottom="20dp" />
</LinearLayout>
