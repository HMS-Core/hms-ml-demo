<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="100dp">

    <RelativeLayout
        android:id="@+id/layout_translate"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:layout_centerInParent="true"
        android:background="@android:color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_item"
            android:layout_width="@dimen/start_icon_width"
            android:layout_height="@dimen/start_icon_width"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:src="@drawable/icon_translate"></ImageView>

        <ImageView
            android:id="@+id/icon_new"
            android:layout_width="@dimen/icon_new_width"
            android:layout_height="@dimen/icon_new_height"
            android:layout_alignParentEnd="true"
            android:background="@null"></ImageView>

        <TextView
            android:id="@+id/text_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/image_item"
            android:gravity="center"
            android:text="@string/translate"
            android:textColor="@color/secondary_text_color"
            android:textSize="@dimen/text_size_9sp"></TextView>

    </RelativeLayout>

</RelativeLayout>